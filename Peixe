-- Carregar uma lib de UI (exemplo: OrionLib, Rayfield, etc.)
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Criar Janela
local Window = OrionLib:MakeWindow({Name = "Peixe Brainrot - Script", HidePremium = false, SaveConfig = true, ConfigFolder = "PeixeConfig"})

-- Vari√°veis de controle
getgenv().autoFish = false
getgenv().autoSell = false

-- Fun√ß√µes gen√©ricas
function fishLoop()
    while getgenv().autoFish do
        task.wait(2) -- tempo entre pescadas
        -- Aqui entraria a fun√ß√£o de "usar vara de pescar"
        print("RemoveEvent/Function")
    end
end

function sellLoop()
    while getgenv().autoSell do
        task.wait(5) -- tempo entre vendas
        -- Aqui entraria a fun√ß√£o de "vender invent√°rio"
        print("üí∞ RemoveEvent/Function de venda")
    end
end

-- Aba de pesca
local Tab = Window:MakeTab({
	Name = "Pesca",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

-- Bot√£o Auto Fish
Tab:AddToggle({
	Name = "Auto Pescar",
	Default = false,
	Callback = function(Value)
		getgenv().autoFish = Value
		if Value then
			task.spawn(fishLoop)
		end
	end
})

-- Bot√£o Auto Sell
Tab:AddToggle({
	Name = "Auto Vender",
	Default = false,
	Callback = function(Value)
		getgenv().autoSell = Value
		if Value then
			task.spawn(sellLoop)
		end
	end
})

-- Notifica√ß√£o
OrionLib:MakeNotification({
	Name = "Ativado!",
	Content = "Menu carregado com sucesso üòé",
	Image = "rbxassetid://4483345998",
	Time = 5
})

OrionLib:Init()
